# Dockerfile for OpenPrequal Proxy
FROM python:3.11-slim

# Accept build argument for load balancer class
ARG LOAD_BALANCER_CLASS=default

WORKDIR /app

COPY src/ src/
COPY requirements.txt ./

RUN mkdir -p /app/logs
RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 8000

ENV PYTHONPATH=src
ENV LOAD_BALANCER_CLASS=$LOAD_BALANCER_CLASS
ENV REGISTRY_TYPE=redis
ENV REDIS_URL=redis://redis:6379
ENV REDIS_DB=0
CMD ["uvicorn", "proxy:app", "--host", "0.0.0.0", "--port", "8000"]
